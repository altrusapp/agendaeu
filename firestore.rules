rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /businesses/{businessId} {
      // Regra de Leitura: Qualquer um pode ler as informações públicas do negócio.
      allow read: if true;

      // Regra de Escrita: Apenas o proprietário pode criar, atualizar ou deletar.
      // - Na criação (create), verificamos os dados que estão chegando (request.resource.data).
      // - Na atualização (update/delete), verificamos os dados que já existem (resource.data).
      allow create: if request.auth.uid == request.resource.data.ownerId;
      allow update, delete: if request.auth.uid == resource.data.ownerId;

      // Serviços são públicos para leitura.
      match /services/{serviceId} {
        allow read: if true;
        allow write: if request.auth.uid == get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId;
      }

      // Clientes e agendamentos são privados para o proprietário do negócio.
      match /clients/{clientId} {
         allow read, write: if request.auth.uid == get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId;
      }

      match /appointments/{appointmentId} {
         allow read, write: if request.auth.uid == get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId;
      }
    }
  }
}
