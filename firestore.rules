rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra para a coleção principal de negócios
    match /businesses/{businessId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth.uid == resource.data.ownerId;

      // Regra para todas as subcoleções dentro de um negócio (serviços, clientes, etc.)
      match /{allSubcollections}/{docId} {
        allow read, write: if request.auth.uid == get(/databases/$(database)/documents/businesses/$(businessId)).data.ownerId;
      }
    }
  }
}
